
pages {
	background-image: linear-gradient(120deg, #3bfdaf, #70d6f2);
}
.icon-box {
	border: #5ccc84 1px solid;
	padding: 10rpx;
	border-radius: 50%;
}
.login-bg {
	height: 220rpx;
	width: 100%;
	background-image: linear-gradient(120deg, #3bfdaf, #70d6f2);
}
.login-box {
	position: absolute;
	top: 180rpx;
	left: 0;
	right: 0;
	height: 600rpx;
	background-color: #fff;
	border-radius: 40rpx 40rpx 0 0;
	padding: 60rpx 70rpx 0;
}
.login-title {
	font-size: 40rpx;
	margin-bottom: 50rpx;
}
.input {
	font-size: 55rpx;
	height: 100rpx;
	margin-bottom: 30rpx;
	color: #f5f5f5;
}
.image {
	width: 100rpx;
	height: 100rpx;
	background-color: #5ccc84;
	border-radius: 50%;
}

