
.conpon{
	width: 310rpx;
	display: inline-flex;
	color: #fff;
	margin-right: 30rpx;
}
.conpon>view:first-child{
	padding: 20rpx 30rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	border-right: 4rpx dashed;
	background-color: #d39e00;
}
.conpon>view:last-child{
	width: 120rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 30rpx !important;
	background-color: #ffc107;
}

