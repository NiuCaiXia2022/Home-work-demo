/* pages/order/order.wxss */

.top{
  margin-bottom: 101rpx;
}

.color{
  color: #ff2828;
}

.li {
  border-bottom: 1rpx solid #dbd9d9;
  margin: 20rpx;
}


.li .li-item {
  padding: 0 10rpx;
}


.li .li-title {
  display: flex;
  justify-content: space-between;
}

.li .li-title-top{
  flex: 3;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.li .li-title-plice {
  flex: 1;
  text-align: right;
}

.li .li-num {
  margin: 20rpx 0;
  /* //子元素添加   下 */
  display: flex;
  flex-direction: row-reverse;
}

.com {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
  background-color: #fff;
  height: 90rpx;
}

.commodity view {
  width: 100%;
  text-align: center;
}

.balance,
.amount,
.deduction{
  padding: 20rpx 60rpx 20rpx 40rpx;
}

.payment{
  width: 100%;
  text-align: center;
  margin-top: 20rpx;
  padding: 20rpx 0;
}

.bottom{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
}

.bottom .bottom-box{
  border-top: 1px solid #dbd9d9;
  margin: 0 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
}

.bottom .bottom-left{
  display: flex;
  height: 100%;
  align-items: center;
}
.bottom .bottom-left view{
  color: #8d8a8a;
}


.bottom .bottom-right{
  background-color: #ff9903;
  color: #fff;
  height: 100%;
  text-align: center;
  padding: 0 60rpx;
  display: flex;
  align-items: center;
}